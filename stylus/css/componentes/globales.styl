Fuente1 = 'Lato', sans-serif
Fuente2 = 'Oswald', sans-serif
color-primario = #333
color-secundario = #8841da
color-claro = #FFF

contenedor()
	width: 96%
	margin: 0 auto
	padding: 3rem 0
	display: flex

caja-sombra()
	background-color: color-claro
	box-shadow: 0 2rem 3.3rem 0 rgba(0,0,0,0.20)

opacidad(color, cantidad)
	alpha(color, cantidad)

for header in 3 2 1
	h{header}
		font-size: 3.5rem - (5*header)
		
titulos(fuente)
	if fuente == Fuente1
		font-family: Fuente1
	else 
		font-family: Fuente2
		font-weight: 600
		text-transform: uppercase

*
	box-sizing: border-box
	margin: 0
	padding: 0

html
	font-size: 62.5%

body
	color: color-primario
	titulos(Fuente1)